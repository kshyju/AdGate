    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
        crossorigin="anonymous">
    <style>

    input{
        width:600px;
    }
    form div{
        padding:5px;
    }
    form button{
        background-color: #d14836;
        color:white;
    }
    </style>
</head>

<body>
    <div class="container">
        <h3>Image analyser ðŸš€</h3>
        <form action="/analyse" method="post" id="frm-analyse">
            <div>
                <input type="text" id="reqUrl" placeholder="Enter url" />

            </div>
            <div>
                <button id="btn" type="submit">Go</button>

            </div>
        </form>
        <div id="progress"></div>
        <div id="details"></div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        $(function () {
            $("#frm-analyse").submit(function (e) {
                e.preventDefault();
                var $progress = $("#progress");
                var url=$(this).attr("action");
                var d = { reqUrl : $("#reqUrl").val() };
                $progress.html("Processing...");
                $.ajax({
                    url:url,
                    data : JSON.stringify(d),
                    method : "post",
                    contentType : "application/json"
                }).done(function (result) {
                    var details='<a target="_blank" href="/details/' + result.requestId + '">View details</a>'
                    $progress.html("Done!");
                    $("#details").html(details);
                    console.log(result);
                });
            });





        });
    </script>
</body>

</html>