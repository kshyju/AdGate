
<h3>Our recommendation</h3>
<div>

    <div class="alert alert-info">
       <h2> <%= recommendation %></h2>
    </div>
</div>
<hr>

<div>
    <% model.ruleResults.forEach(function(ruleResult) { %>
        <div>
            <h4><%= getRuleDisplayName(ruleResult.name) %></h4>
            <div>
                <% ruleResult.recommendations.forEach(function(recommendation) { %>
                    <div class="recommendation-container">
                    <div class="alert <%= getStatusClass(recommendation.status) %>">

                        <i class='material-icons'><%= getStatus(recommendation.status) %></i>  <%= getDisplayName(recommendation.name) %>

                        <span class='details'>
                            <a href='../recommendation/<%= model.id %>/<%= ruleResult.name %>/<%= recommendation.name %>' class='show_details' ><i class='material-icons'>arrow_forward</i></a>
                        </span>

                    </div>
                    <div class="details-meta">

                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    <% }); %>
</div>

